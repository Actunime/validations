{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "outDir": "build",
        "sourceMap": false,
        "rootDirs": [
            "./",
            "./src"
        ],
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "build",
        "node_modules",
        "test",
        "src/**/*.test.ts",
        "src/**/*.d.ts"
    ]
}